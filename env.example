# Production Environment Variables
# Copy this to .env and fill in your values

# Django
SECRET_KEY=your-super-secret-key-here
DEBUG=False

# Site configuration (your VM's external IP or domain)
SITE_DOMAIN=your-vm-ip-or-domain.com
SITE_NAME=Todos App

# Google OAuth (get from Google Cloud Console)
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

# OpenAI (optional, for AI time estimation)
OPENAI_API_KEY=your-openai-api-key

# Database (leave as is for docker-compose)
DATABASE_URL=postgres://todos_user:todos_password@db:5432/todos_db

# Redis (leave as is for docker-compose)
REDIS_URL=redis://redis:6379/0